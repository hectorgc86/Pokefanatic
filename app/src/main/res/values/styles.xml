<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tema_app" parent="AppTheme">
        <item name="colorPrimary">@color/color1</item>
        <item name="colorPrimaryDark">@color/color1</item>
        <item name="colorAccent">@color/color3</item>
        <item name="android:textColorPrimary">@color/color2</item>
        <item name="android:textColorSecondary">@color/color5</item>
        <item name="android:itemBackground">@color/color1</item>
    </style>

    <style name="tema_dialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/color1</item>
        <item name="android:colorAccent">@color/color2</item>
        <item name="android:textColor">@color/color2</item>
        <item name="android:textColorPrimary">@color/color2</item>
    </style>
</resources>
