<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:appTools="http://schemas.android.com/tools"
    android:id="@+id/cv_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:padding="15dp"
    app:cardBackgroundColor="@color/color2"
    app:cardCornerRadius="15dp"
    app:cardElevation="8dp">

    <RelativeLayout
        android:id="@+id/root_layout_rv"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/color2"
        android:padding="10dp">

        <Button
            android:id="@+id/btn_favorito"
            style="@style/Widget.AppCompat.Button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="14dp"
            android:background="@drawable/pokeball_abierta" />

        <ImageView
            android:id="@+id/iv_animalImage"
            android:layout_width="92dp"
            android:layout_height="89dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="2dp"
            android:contentDescription="@string/foto" />

        <TextView
            android:id="@+id/tv_rv_numero"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="16dp"
            android:contentDescription="@string/nombre"
            android:textAlignment="textStart"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="italic"
            appTools:text="numero" />

        <TextView
            android:id="@+id/tv_rv_nombre"
            android:layout_width="176dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="19dp"
            android:layout_marginTop="25dp"
            android:layout_toEndOf="@id/iv_animalImage"
            android:textColor="@android:color/black"
            android:textSize="28sp"
            android:textStyle="bold"
            appTools:text="Nombre" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>